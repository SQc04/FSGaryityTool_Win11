<Page
    x:Class="FSGaryityTool_Win11.Views.Pages.FairingStudioPage.FSPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FSGaryityTool_Win11.Views.Pages.FairingStudioPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid>
        <Border
            Margin="12,12,12,12"
            Background="Transparent"
            BorderBrush="{ThemeResource TextControlElevationBorderFocusedBrush}"
            BorderThickness="2"
            CornerRadius="{StaticResource OverlayCornerRadius}">
            <WebView2
                x:Name="MyWebView2"
                Margin="2,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                x:FieldModifier="Public"
                Source="https://fairingstudio.com/" />
        </Border>
    </Grid>
</Page>
